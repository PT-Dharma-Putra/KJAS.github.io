---
import { productCategories } from "../data/products";
---

<div id="product" class="max-w-7xl mx-auto px-6">
  <div
    class="mb-10 flex flex-col md:flex-row justify-between items-end gap-6 border-b border-primary/10 pb-8"
  >
    <div>
      <h2 class="font-display text-5xl text-primary font-bold">
        KJAS PRODUCTS
      </h2>
    </div>
    <a
      href="/products"
      class="flex items-center gap-2 text-primary font-medium cursor-pointer hover:gap-4 transition-all"
    >
      <span>MORE INFORMATION</span>
      <span class="material-icons-outlined">south_east</span>
    </a>
  </div>

  <div class="swiper product-slider overflow-hidden !pb-12">
    <div class="swiper-wrapper">
      {
        productCategories
          .flatMap((slide) => slide.items)
          .map((item) => (
            <div class="swiper-slide select-none">
              <div
                class="group cursor-pointer product-item"
                data-product={JSON.stringify(item)}
              >
                <div class="bg-white p-6 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-500 overflow-hidden mb-4 relative aspect-[4/5] flex items-center justify-center">
                  <img
                    alt={item.name}
                    class="w-full h-full object-contain group-hover:scale-110 transition-transform duration-700"
                    src={item.img}
                  />
                </div>
                <div class="bg-primary p-4 rounded-xl text-white text-xs font-medium tracking-wider uppercase text-center group-hover:bg-secondary transition-colors">
                  [{item.id}] {item.name}
                </div>
              </div>
            </div>
          ))
      }
    </div>
    <div class="swiper-pagination"></div>
    <div
      class="swiper-button-prev text-primary bg-white/80 p-6 rounded-full shadow-lg hover:bg-white transition-colors flex items-center justify-center"
    >
      <span class="material-icons-outlined">keyboard_arrow_left</span>
    </div>
    <div
      class="swiper-button-next text-primary bg-white/80 p-6 rounded-full shadow-lg hover:bg-white transition-colors flex items-center justify-center"
    >
      <span class="material-icons-outlined">keyboard_arrow_right</span>
    </div>
  </div>
</div>

<!-- Product Modal -->
<div
  id="product-modal"
  class="fixed inset-0 z-[100] hidden items-center justify-center p-4 lg:p-8"
>
  <div
    class="absolute inset-0 bg-black/60 backdrop-blur-md transition-opacity duration-300"
    id="modal-backdrop"
  >
  </div>
  <div
    class="relative bg-[#f8f5f2] w-full max-w-5xl rounded-3xl shadow-2xl overflow-hidden flex flex-col md:flex-row transform transition-all scale-95 opacity-0 max-h-[95vh] md:max-h-[90vh]"
    id="modal-content"
  >
    <button
      id="modal-close"
      class="absolute top-4 right-4 z-[110] p-2 text-slate-500 hover:text-red-500 transition-colors bg-white/50 rounded-full hover:bg-white shadow-sm"
    >
      <span class="material-icons-outlined text-2xl md:text-3xl">close</span>
    </button>

    <div
      class="w-full md:w-1/2 bg-white p-6 md:p-8 flex flex-col gap-6 overflow-y-auto"
    >
      <div
        class="swiper modal-gallery w-full aspect-square rounded-2xl overflow-hidden bg-zinc-50 border border-zinc-100"
      >
        <div class="swiper-wrapper" id="modal-gallery-wrapper"></div>
        <div
          class="swiper-button-prev !text-primary after:!text-xl bg-white/80 p-5 rounded-full shadow-sm hover:bg-white transiton-colors"
        >
        </div>
        <div
          class="swiper-button-next !text-primary after:!text-xl bg-white/80 p-5 rounded-full shadow-sm hover:bg-white transiton-colors"
        >
        </div>
      </div>
      <div class="swiper modal-thumbs w-full h-20 md:h-24 p-1">
        <div class="swiper-wrapper" id="modal-thumbs-wrapper"></div>
      </div>
    </div>

    <div
      class="w-full md:w-1/2 p-6 md:p-12 flex flex-col justify-center overflow-y-auto bg-[#faf8f6]"
    >
      <h3
        id="modal-title"
        class="font-display text-2xl md:text-4xl font-bold text-[#8B4513] mb-4 md:mb-6 leading-tight break-words"
      >
      </h3>
      <div class="space-y-6 md:space-y-8 text-[#5D4037]">
        <div
          class="bg-white/50 p-5 md:p-6 rounded-2xl border border-[#8B4513]/5"
        >
          <p
            class="font-bold text-[10px] md:text-xs uppercase tracking-widest text-[#8B4513]/60 mb-2 md:mb-3"
          >
            Description
          </p>
          <p
            id="modal-description"
            class="text-sm md:text-base leading-relaxed opacity-90 font-light"
          >
          </p>
        </div>
        <div
          class="bg-white/50 p-5 md:p-6 rounded-2xl border border-[#8B4513]/5"
        >
          <p
            class="font-bold text-[10px] md:text-xs uppercase tracking-widest text-[#8B4513]/60 mb-2 md:mb-3"
          >
            Dimensions
          </p>
          <p
            id="modal-dimensions"
            class="text-lg md:text-xl font-medium tracking-wide font-display text-[#8B4513]"
          >
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  import Swiper from "swiper";
  import {
    Navigation,
    Pagination,
    Autoplay,
    Thumbs,
    EffectFade,
  } from "swiper/modules";
  import "swiper/css";
  import "swiper/css/navigation";
  import "swiper/css/pagination";
  import "swiper/css/thumbs";
  import "swiper/css/effect-fade";

  function init() {
    try {
      // Main Product Slider
      if (document.querySelector(".product-slider")) {
        new Swiper(".product-slider", {
          modules: [Navigation, Pagination, Autoplay],
          loop: true,
          spaceBetween: 20,
          slidesPerView: 1,
          autoplay: {
            delay: 5000,
            disableOnInteraction: false,
          },
          pagination: {
            el: ".swiper-pagination",
            clickable: true,
          },
          navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
          },
          breakpoints: {
            640: {
              slidesPerView: 2,
              spaceBetween: 30,
            },
            1024: {
              slidesPerView: 4,
              spaceBetween: 30,
            },
          },
        });
      }
    } catch (e) {
      console.error("Swiper init error:", e);
    }

    // Modal Logic
    const modal = document.getElementById("product-modal");
    const modalContent = document.getElementById("modal-content");
    const modalBackdrop = document.getElementById("modal-backdrop");
    const modalClose = document.getElementById("modal-close");
    const productItems = document.querySelectorAll(".product-item");

    const modalTitle = document.getElementById("modal-title");
    const modalDesc = document.getElementById("modal-description");
    const modalDims = document.getElementById("modal-dimensions");
    const galleryWrapper = document.getElementById("modal-gallery-wrapper");
    const thumbsWrapper = document.getElementById("modal-thumbs-wrapper");

    let gallerySwiper = null;
    let thumbsSwiper = null;

    function openModal() {
      if (!modal) return;
      modal.classList.remove("hidden");
      modal.classList.add("flex");
      // Trigger animation
      setTimeout(() => {
        modalContent?.classList.remove("scale-95", "opacity-0");
        modalContent?.classList.add("scale-100", "opacity-100");
      }, 10);
      document.body.style.overflow = "hidden";
    }

    function closeModal() {
      modalContent?.classList.remove("scale-100", "opacity-100");
      modalContent?.classList.add("scale-95", "opacity-0");
      setTimeout(() => {
        modal?.classList.add("hidden");
        modal?.classList.remove("flex");
      }, 300);
      document.body.style.overflow = "";
    }

    modalClose?.addEventListener("click", closeModal);
    modalBackdrop?.addEventListener("click", closeModal);

    productItems.forEach((item) => {
      item.addEventListener("click", () => {
        try {
          const productData = item.getAttribute("data-product");
          if (!productData) return;
          const data = JSON.parse(productData);

          // Populate Data with fallbacks
          const name = data.name || "Unnamed Product";
          const id = data.id || "N/A";

          if (modalTitle) {
            modalTitle.innerHTML = `<div class="flex items-center gap-3 mb-4">
                              <span class="px-3 py-1 bg-[#8B4513]/10 text-[#8B4513] text-[10px] md:text-xs font-bold uppercase tracking-[0.2em] rounded-full">${data.category || "Collection"}</span>
                              <span class="text-primary/40 text-sm md:text-base font-mono tracking-wider">[${id}]</span>
                            </div>
                            <span class="block text-[#8B4513] font-display text-3xl md:text-5xl font-bold leading-tight">${name}</span>`;
          }

          if (modalDesc) {
            modalDesc.textContent =
              data.description ||
              "Crafted with precision and premium materials to ensure lasting comfort and timeless elegance for your space. This piece reflects our 10 years of commitment to furniture excellence.";
          }

          if (modalDims) {
            modalDims.textContent =
              data.dimensions || "Custom dimensions available upon request";
          }

          // Populate Images
          const images =
            data.detailImages && data.detailImages.length > 0
              ? data.detailImages
              : [data.img || "/images/logo-kjas.jpg"];

          if (galleryWrapper && thumbsWrapper) {
            galleryWrapper.innerHTML = images
              .map(
                (src) =>
                  `<div class="swiper-slide bg-white flex items-center justify-center p-4 h-full"><img src="${src}" class="max-w-full max-h-full w-auto h-auto object-contain mx-auto" loading="lazy" /></div>`,
              )
              .join("");

            thumbsWrapper.innerHTML = images
              .map(
                (src) =>
                  `<div class="swiper-slide cursor-pointer border-2 border-transparent rounded-xl overflow-hidden transition-all hover:border-primary/50 bg-zinc-50 flex items-center justify-center h-full"><img src="${src}" class="w-full h-full object-cover" loading="lazy" /></div>`,
              )
              .join("");
          }

          // Destroy previous swipers if exists
          gallerySwiper?.destroy?.();
          thumbsSwiper?.destroy?.();

          // Initialize Thumbs Swiper
          thumbsSwiper = new Swiper(".modal-thumbs", {
            modules: [Navigation, Thumbs],
            spaceBetween: 10,
            slidesPerView: 4,
            freeMode: true,
            watchSlidesProgress: true,
          });

          // Initialize Gallery Swiper
          gallerySwiper = new Swiper(".modal-gallery", {
            modules: [Navigation, Thumbs, EffectFade],
            loop: images.length > 1,
            effect: "fade",
            fadeEffect: { crossFade: true },
            spaceBetween: 10,
            navigation: {
              nextEl: ".modal-gallery .swiper-button-next",
              prevEl: ".modal-gallery .swiper-button-prev",
            },
            thumbs: {
              swiper: thumbsSwiper,
            },
          });

          openModal();
        } catch (err) {
          console.error("Error opening modal:", err);
        }
      });
    });
  }

  // Run on initial load and navigation
  document.addEventListener("astro:page-load", init);
</script>

<style>
  .swiper-button-next::after,
  .swiper-button-prev::after {
    content: none !important;
  }
  :global(.swiper-pagination-bullet-active) {
    background-color: #0f5a38 !important;
  }
  :global(.modal-thumbs .swiper-slide-thumb-active) {
    border-color: #0f5a38 !important;
    opacity: 1;
  }
  :global(.modal-thumbs .swiper-slide) {
    opacity: 0.6;
  }
  :global(.modal-thumbs .swiper-slide:hover) {
    opacity: 1;
  }
</style>
