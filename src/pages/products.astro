---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { productCategories } from "../data/products";

// Extract unique categories for the filter
const categories = ["ALL", "Sofa", "Chair", "Table", "Bench"];
---

<Layout title="KJAS Products | All Collections">
  <Navbar />
  <main class="pt-32 pb-24 bg-zinc-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-6">
      
      <div class="mb-16 text-center">
        <h1 class="font-display text-5xl md:text-6xl font-bold text-primary mb-6 tracking-tight">
          Our Collection
        </h1>
        <p class="text-slate-600 max-w-2xl mx-auto text-lg leading-relaxed">
          Explore our complete range of premium furniture, crafted with precision and elegance to elevate your space.
        </p>
      </div>

      <!-- Filter Buttons -->
      <div class="flex flex-wrap justify-center gap-4 mb-16" id="filter-container">
        {
          categories.map((category) => (
            <button
              class={`filter-btn px-6 py-2 rounded-full text-sm font-medium tracking-wider transition-all duration-300 border border-primary/20 hover:bg-primary hover:text-white ${
                category === "ALL"
                  ? "bg-primary text-white shadow-lg shadow-primary/30"
                  : "bg-white text-primary hover:shadow-lg"
              }`}
              data-category={category}
            >
              {category}
            </button>
          ))
        }
      </div>

      <!-- Product Grid -->
      <div
        class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6"
        id="product-grid"
      >
        {
          productCategories.flatMap((category) =>
            category.items.map((item) => (
              <div
                class="group cursor-pointer product-item animate-fade-in"
                data-product={JSON.stringify(item)}
                data-category={item.category}
              >
                <div class="bg-white p-6 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-500 overflow-hidden mb-4 relative aspect-[4/5] flex items-center justify-center border border-zinc-100">
                  <img
                    src={item.img}
                    alt={item.name}
                    class="w-full h-full object-contain group-hover:scale-110 transition-transform duration-700"
                    loading="lazy"
                  />
                  <!-- Overlay icon for better UX -->
                  <div class="absolute inset-0 bg-black/5 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                  </div>
                </div>
                <div class="bg-primary/95 backdrop-blur-sm p-4 rounded-xl text-white text-[10px] md:text-xs font-medium tracking-wider uppercase text-center group-hover:bg-secondary transition-colors shadow-md">
                  <span class="opacity-70 mr-1">[{item.id}]</span> {item.name}
                </div>
              </div>
            ))
          )
        }
      </div>
      
       <!-- Back to Home -->
       <div class="mt-20 flex justify-center">
        <a href="/#home" class="flex items-center gap-2 text-primary font-medium hover:gap-4 transition-all uppercase tracking-wide group">
          <span class="material-icons-outlined group-hover:-translate-x-1 transition-transform">west</span>
          <span>Back to Home</span>
        </a>
      </div>

    </div>

    <!-- Product Modal (Reused Logic) -->
    <div
      id="product-modal"
      class="fixed inset-0 z-[100] hidden items-center justify-center p-4 lg:p-8"
    >
      <div
        class="absolute inset-0 bg-black/60 backdrop-blur-md transition-opacity duration-300"
        id="modal-backdrop"
      >
      </div>
      <div
        class="relative bg-[#f8f5f2] w-full max-w-5xl rounded-3xl shadow-2xl overflow-hidden flex flex-col md:flex-row transform transition-all scale-95 opacity-0 max-h-[95vh] md:max-h-[90vh]"
        id="modal-content"
      >
        <button
          id="modal-close"
          class="absolute top-4 right-4 z-[110] p-2 text-slate-500 hover:text-red-500 transition-colors bg-white/50 rounded-full hover:bg-white shadow-sm"
        >
          <span class="material-icons-outlined text-2xl md:text-3xl">close</span>
        </button>

        <div class="w-full md:w-1/2 bg-white p-6 md:p-8 flex flex-col gap-6 overflow-y-auto">
          <div
            class="swiper modal-gallery w-full aspect-square rounded-2xl overflow-hidden bg-zinc-50 border border-zinc-100"
          >
            <div class="swiper-wrapper" id="modal-gallery-wrapper"></div>
            <div class="swiper-button-prev !text-primary after:!text-xl bg-white/80 p-5 rounded-full shadow-sm hover:bg-white transiton-colors"></div>
            <div class="swiper-button-next !text-primary after:!text-xl bg-white/80 p-5 rounded-full shadow-sm hover:bg-white transiton-colors"></div>
          </div>
          <div class="swiper modal-thumbs w-full h-20 md:h-24 p-1">
            <div class="swiper-wrapper" id="modal-thumbs-wrapper"></div>
          </div>
        </div>

        <div class="w-full md:w-1/2 p-6 md:p-12 flex flex-col justify-center overflow-y-auto bg-[#faf8f6]">
          <h3
            id="modal-title"
            class="font-display text-2xl md:text-4xl font-bold text-[#8B4513] mb-4 md:mb-6 leading-tight break-words"
          >
          </h3>
          <div class="space-y-6 md:space-y-8 text-[#5D4037]">
            <div class="bg-white/50 p-5 md:p-6 rounded-2xl border border-[#8B4513]/5">
              <p class="font-bold text-[10px] md:text-xs uppercase tracking-widest text-[#8B4513]/60 mb-2 md:mb-3">Description</p>
              <p
                id="modal-description"
                class="text-sm md:text-base leading-relaxed opacity-90 font-light"
              >
              </p>
            </div>
            <div class="bg-white/50 p-5 md:p-6 rounded-2xl border border-[#8B4513]/5">
              <p class="font-bold text-[10px] md:text-xs uppercase tracking-widest text-[#8B4513]/60 mb-2 md:mb-3">Dimensions</p>
              <p id="modal-dimensions" class="text-lg md:text-xl font-medium tracking-wide font-display text-[#8B4513]">
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  import Swiper from "swiper";
  import { Navigation, Thumbs, EffectFade } from "swiper/modules";
  import "swiper/css";
  import "swiper/css/navigation";
  import "swiper/css/thumbs";
  import "swiper/css/effect-fade";

  function initPage() {
    // --- Filter Logic ---
    const filterBtns = document.querySelectorAll(".filter-btn");
    const productItems = document.querySelectorAll(".product-item");

    function filterProducts(category) {
      // Update buttons
      filterBtns.forEach((btn) => {
        if (btn.dataset.category === category) {
          btn.classList.add("bg-primary", "text-white", "shadow-lg", "shadow-primary/30");
          btn.classList.remove("bg-white", "text-primary", "hover:shadow-lg");
        } else {
          btn.classList.remove("bg-primary", "text-white", "shadow-lg", "shadow-primary/30");
          btn.classList.add("bg-white", "text-primary", "hover:shadow-lg");
        }
      });

      // Filter grid
      productItems.forEach((item) => {
        const itemCategory = item.dataset.category;
        if (category === "ALL" || itemCategory === category) {
          item.classList.remove("hidden");
          item.classList.add("animate-fade-in");
        } else {
          item.classList.add("hidden");
          item.classList.remove("animate-fade-in");
        }
      });
    }

    filterBtns.forEach((btn) => {
      btn.addEventListener("click", () => {
        const category = btn.dataset.category;
        filterProducts(category);
      });
    });

    // --- Modal Logic ---
    const modal = document.getElementById("product-modal");
    const modalContent = document.getElementById("modal-content");
    const modalBackdrop = document.getElementById("modal-backdrop");
    const modalClose = document.getElementById("modal-close");

    const modalTitle = document.getElementById("modal-title");
    const modalDesc = document.getElementById("modal-description");
    const modalDims = document.getElementById("modal-dimensions");
    const galleryWrapper = document.getElementById("modal-gallery-wrapper");
    const thumbsWrapper = document.getElementById("modal-thumbs-wrapper");

    let gallerySwiper = null;
    let thumbsSwiper = null;

    function openModal() {
      if (!modal) return;
      modal.classList.remove("hidden");
      modal.classList.add("flex");
      // Trigger animation
      setTimeout(() => {
        modalContent?.classList.remove("scale-95", "opacity-0");
        modalContent?.classList.add("scale-100", "opacity-100");
      }, 10);
      document.body.style.overflow = "hidden";
    }

    function closeModal() {
      modalContent?.classList.remove("scale-100", "opacity-100");
      modalContent?.classList.add("scale-95", "opacity-0");
      setTimeout(() => {
        modal?.classList.add("hidden");
        modal?.classList.remove("flex");
      }, 300);
      document.body.style.overflow = "";
    }

    modalClose?.addEventListener("click", closeModal);
    modalBackdrop?.addEventListener("click", closeModal);

    productItems.forEach((item) => {
      item.addEventListener("click", () => {
        try {
          const productData = item.getAttribute("data-product");
          if (!productData) return;
          const data = JSON.parse(productData);

          // Populate Data with fallbacks
          const name = data.name || "Unnamed Product";
          const id = data.id || "N/A";
          
          if (modalTitle) {
            modalTitle.innerHTML = `<span class="block text-sm md:text-base font-medium opacity-60 mb-2">Category: ${data.category || 'Collection'}</span>
                                   <span class="block text-primary/80 text-xl md:text-2xl mb-2 font-mono">[${id}]</span>
                                   ${name}`;
          }
          
          if (modalDesc) {
            modalDesc.textContent = data.description || "Crafted with precision and premium materials to ensure lasting comfort and timeless elegance for your space. This piece reflects our 10 years of commitment to furniture excellence.";
          }
          
          if (modalDims) {
            modalDims.textContent = data.dimensions || "Custom dimensions available upon request";
          }

          // Populate Images
          const images =
            data.detailImages && data.detailImages.length > 0
              ? data.detailImages
              : [data.img || "/images/logo-kjas.jpg"];

          if (galleryWrapper && thumbsWrapper) {
            galleryWrapper.innerHTML = images
              .map(
                (src) =>
                  `<div class="swiper-slide bg-white flex items-center justify-center p-4 h-full"><img src="${src}" class="max-w-full max-h-full w-auto h-auto object-contain mx-auto" loading="lazy" /></div>`,
              )
              .join("");

            thumbsWrapper.innerHTML = images
              .map(
                (src) =>
                  `<div class="swiper-slide cursor-pointer border-2 border-transparent rounded-xl overflow-hidden transition-all hover:border-primary/50 bg-zinc-50 flex items-center justify-center h-full"><img src="${src}" class="w-full h-full object-cover" loading="lazy" /></div>`,
              )
              .join("");
          }

          // Destroy previous swipers if exists
          gallerySwiper?.destroy?.();
          thumbsSwiper?.destroy?.();

          // Initialize Thumbs Swiper
          thumbsSwiper = new Swiper(".modal-thumbs", {
            modules: [Navigation, Thumbs],
            spaceBetween: 10,
            slidesPerView: 4,
            freeMode: true,
            watchSlidesProgress: true,
          });

          // Initialize Gallery Swiper
          gallerySwiper = new Swiper(".modal-gallery", {
            modules: [Navigation, Thumbs, EffectFade],
            loop: images.length > 1,
            effect: "fade",
            fadeEffect: { crossFade: true },
            spaceBetween: 10,
            navigation: {
              nextEl: ".modal-gallery .swiper-button-next",
              prevEl: ".modal-gallery .swiper-button-prev",
            },
            thumbs: {
              swiper: thumbsSwiper,
            },
          });

          openModal();
        } catch (err) {
          console.error("Error opening modal:", err);
        }
      });
    });
  }

  // Run on initial load and navigation
  document.addEventListener("astro:page-load", initPage);
</script>

<style>
  .swiper-button-next::after,
  .swiper-button-prev::after {
    content: none !important;
  }
  :global(.swiper-pagination-bullet-active) {
    background-color: #0f5a38 !important;
  }
  :global(.modal-thumbs .swiper-slide-thumb-active) {
    border-color: #0f5a38 !important;
    opacity: 1;
  }
  :global(.modal-thumbs .swiper-slide) {
    opacity: 0.6;
  }
  :global(.modal-thumbs .swiper-slide:hover) {
    opacity: 1;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in {
    animation: fadeIn 0.5s ease-out forwards;
  }
</style>
